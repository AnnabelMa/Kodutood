}

<h1>Create</h1>

<h4>MeasureView</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @Html.EditControlsFor(x => x.Item.Id)
            @Html.EditControlsFor(x => x.Item.Code)
            @Html.EditControlsFor(x => x.Item.Name)
